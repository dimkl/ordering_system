{
  "name": "@dimkl/ordering-system-api",
  "version": "0.0.1",
  "description": "Ordering System Api",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "test": "NODE_ENV=test jest --runInBand --config='./config/jest/config.ts'",
    "test:debug": "node inspect node_modules/jest/bin/jest.js --runInBand --config='./config/jest/config.ts'",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "start": "node dist/src/index.js",
    "debug": "node inspect src/index.js",
    "db:migrate": "knex migrate:latest --knexfile ./dist/config/knexfile.js",
    "db:migrate:new": "knex migrate:make --client pg -x ts --knexfile ./config/knexfile.ts",
    "db:rollback": "knex migrate:rollback --knexfile ./dist/config/knexfile.js",
    "db:seed": "knex seed:run --knexfile ./config/knexfile.ts",
    "db:seed:new": "knex seed:make --client pg --knexfile ./config/knexfile.ts",
    "setup": "npm run build && npm run db:migrate && npm run db:seed",
    "watch": "nodemon src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimkl/ordering_system.git"
  },
  "keywords": [
    "order",
    "book",
    "waiter"
  ],
  "author": "dimitris.klouvas@gmail.com",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dimkl/ordering_system/issues"
  },
  "homepage": "https://github.com/dimkl/ordering_system#readme",
  "dependencies": {
    "@dimkl/ajv-discovery-api": "^0.2.0",
    "@dimkl/ajv-discovery-sdk": "^0.1.3",
    "@dimkl/clerk-koa": "^0.1.2",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^5.0.1",
    "debug": "^4.3.4",
    "dotenv-flow": "^4.1.0",
    "javascript-state-machine": "^3.1.0",
    "jsonwebtoken": "^9.0",
    "knex": "^2.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "objection": "^3.0.1",
    "objection-db-errors": "^1.1.2",
    "objection-password": "^3.0.0",
    "pg": "^8.7.3",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@types/ajv": "^1.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "jest": "^29.0.5",
    "nodemon": "^2.0.20",
    "supertest": "^6.2.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=20"
  }
}