{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/customer.schema.json",
  "title": "Customer",
  "description": "Customer schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "first_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "last_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 1,
      "maxLength": 255
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    }
  },
  "required": [
    "first_name",
    "last_name",
    "email",
    "password"
  ]
}