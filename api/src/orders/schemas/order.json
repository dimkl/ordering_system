{
  "$id": "/schemas/order",
  "$async": true,
  "title": "Order",
  "description": "Order schema",
  "type": "object",
  "properties": {
    "id": {
      "readOnly": true,
      "type": "string",
      "minLength": 26,
      "maxLength": 26
    },
    "customer_id": {
      "type": "string",
      "minLength": 26,
      "maxLength": 26
    },
    "state": {
      "$ref": "#/definitions/state",
      "default": "draft"
    },
    "created_at": {
      "readOnly": true,
      "type": "string"
    },
    "updated_at": {
      "readOnly": true,
      "type": "string"
    },
    "time_slot_id": {
      "type": "integer",
      "exclusiveMinimum": 0
    }
  },
  "required": ["customer_id", "time_slot_id"],
  "definitions": {
    "state": {
      "enum": [
        "draft",
        "placed",
        "processing",
        "delivered",
        "payment_requested",
        "invoiced",
        "paid",
        "canceled"
      ]
    }
  },
  "additionalProperties": false
}
